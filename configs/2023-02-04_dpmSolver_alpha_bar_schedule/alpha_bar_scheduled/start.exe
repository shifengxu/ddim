#!/bin/bash

set -e
gpu_ids="4"
d_dd="./code_ddim"
ab_dir=../exp/dpm_alphaBar
weight_file=./res_mse_avg_list.txt

mkdir -p $d_dd
cp -rf ../albar		$d_dd
cp -rf ../configs 	$d_dd
cp -rf ../datasets 	$d_dd
cp -rf ../functions	$d_dd
cp -rf ../models	$d_dd
cp -rf ../runners	$d_dd
cp -rf ../schedule	$d_dd
cp     ../*.py		$d_dd

pyshifeng -u $d_dd/schedule/main_schedule_batch.py	\
	--n_epochs 10000		\
	--log_interval 2000		\
	--lr 0.000001			\
	--output_dir .			\
	--alpha_bar_dir $ab_dir		\
	--aa_low 0.0001			\
	--aa_low_lambda 10000000	\
	--weight_file $weight_file	\
	--beta_schedule linear		\
	--gpu_ids $gpu_ids

